<Page x:Class="NeBeatStreet.Pages.AddEditUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeBeatStreet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditUsers">
    <Grid Background="White">
        <Label Content="Добавить/Изменить пользователя" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="26">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <TextBox x:Name="FirstNameTb" Text="{Binding FirstName}" HorizontalAlignment="Left" Margin="32,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="16" Height="33" />
        <TextBox x:Name="EmailTb" Text="{Binding Email}" HorizontalAlignment="Left" Margin="32,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="184" FontSize="16" Height="34"/>
        <TextBox x:Name="PhoneTb" Text="{Binding Phone}" HorizontalAlignment="Left" Margin="32,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="16" Height="33" />
        <TextBox x:Name="LoginTb" Text="{Binding Login}" HorizontalAlignment="Left" Margin="529,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="16" Height="33"/>
        <Button x:Name="AddEditButtonUser" Content="Сохранить" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" Height="47" Width="212" Background="#FF0D1BED" Foreground="White" FontFamily="Cascadia Mono SemiBold" FontSize="16" Click="AddEditButtonUser_Click" />
        <Label Content="Введите имя" HorizontalAlignment="Left" Margin="32,91,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <Label Content="Введите Email" HorizontalAlignment="Left" Margin="32,175,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <Label Content="Введите телефон" HorizontalAlignment="Left" Margin="32,255,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <Label Content="Введите логин" HorizontalAlignment="Left" Margin="529,85,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="529,169,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <Button x:Name="ExitButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="44" Background="#FFE61E1E" RenderTransformOrigin="0,0" BorderThickness="1,1,1,1" Margin="6,9,0,0" Click="ExitButton_Click">
            <Image HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="26" Source="/Images/kindpng_2158013 (1).png"/>
        </Button>
        <Label Content="Выберите роль пользователя" HorizontalAlignment="Left" Margin="519,251,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="16" Width="271">
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </Label.Foreground>
        </Label>
        <ComboBox x:Name="ComboRole" ItemsSource="{Binding Role}" DisplayMemberPath="NameRole" HorizontalAlignment="Left" Margin="529,288,0,0" VerticalAlignment="Top" Width="184" Height="33"/>
        <TextBox x:Name="PasswordTb" Text="{Binding Password}" HorizontalAlignment="Left" Margin="529,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="184" FontSize="16" Height="34"/>

    </Grid>
</Page>
